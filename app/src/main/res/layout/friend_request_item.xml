<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/friendRequestItem_profilePhoto_imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/profile_circular_border"
            android:elevation="5dp"
            android:padding="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_home_default_profile_pic"
            android:layout_centerVertical="true"
            android:contentDescription="user's profile pic here"/>

        <TextView
            android:id="@+id/friendRequestItem_displayName_textView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/friendRequestItem_profilePhoto_imageButton"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/friendRequestItem_confirm_textView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textAlignment="center"
            android:background="@color/lightgreen"
            android:layout_toEndOf="@id/friendRequestItem_displayName_textView"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/friendRequestItem_delete_textView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:textAlignment="center"
            android:background="@color/redDelete"
            android:layout_toEndOf="@id/friendRequestItem_confirm_textView"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>