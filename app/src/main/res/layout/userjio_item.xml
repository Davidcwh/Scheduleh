<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#696969">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#696969">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/userJio_start_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="8dp"
                android:text="09:00 am"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/userJio_end_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="8dp"
                android:text="10:00 am"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/userJio_start_time"/>

            <TextView
                android:id="@+id/userJio_color"
                android:layout_width="8dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/userJio_start_time" />

            <TextView
                android:id="@+id/userJio_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_toRightOf="@+id/userJio_start_time"
                android:text="event title"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/userJio_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/userJio_name"
                android:layout_marginTop="8dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_marginTop="100dp"
        android:background="#696969">


        <TextView
            android:id="@+id/userJio_date_textView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_alignParentLeft="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="12 June, 2019"/>

        <Button
            android:id="@+id/userJio_friendsJoining_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who's coming"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_toStartOf="@+id/userJio_removeJio_button"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/userJio_removeJio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Jio"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>